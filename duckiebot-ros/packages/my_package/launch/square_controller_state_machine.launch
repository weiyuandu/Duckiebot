<?xml version="1.0"?>
<launch>
    <!-- Square Controller State Machine Launch File -->
    
    <!-- Vehicle name parameter -->
    <arg name="veh" default="$(env VEHICLE_NAME)" doc="Name of the vehicle"/>
    
    <!-- Square Controller State Machine Node -->
    <node name="square_controller_node" 
          pkg="my_package" 
          type="square_controller_node.py" 
          output="screen"
          clear_params="true">
        
        <!-- Remap topics to vehicle-specific names -->
        <remap from="~car_cmd" to="car_cmd_switch_node/cmd"/>
        <remap from="~shutdown" to="shutdown"/>
        
        <!-- Parameters -->
        <param name="veh" value="$(arg veh)"/>
        
    </node>
    
</launch>
